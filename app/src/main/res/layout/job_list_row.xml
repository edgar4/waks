<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    android:layout_margin="6dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/job_title"
            android:layout_alignStart="@+id/job_title"
            android:layout_below="@+id/divider"
            android:layout_marginTop="2dp"
            android:text="Tinker IO , Nairobi Kenya"
            android:textSize="12sp"
            android:textStyle="normal|italic" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/divider"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/divider"
            android:layout_toStartOf="@+id/divider"
            android:text="freelance"
            android:textColor="@color/abc_primary_text_material_light"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/post_time"
            android:layout_alignBottom="@+id/post_time"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/post_time"
            android:layout_toStartOf="@+id/post_time"
            android:text="|"
            android:textColor="@color/abc_primary_text_material_light"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:text="2hrs ago"
            android:textColor="@color/abc_primary_text_material_light"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/job_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/textView"
            android:layout_toStartOf="@+id/textView"
            android:text="Full stack developer"
            android:textColor="@color/abc_primary_text_material_light" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/job_title"
            android:layout_alignStart="@+id/job_title"
            android:layout_below="@+id/job_title"
            android:layout_marginTop="5dp"
            android:text="lorem ipsum solorem ipsum solorem ipsum so"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/divider"
            android:layout_alignRight="@+id/textView"
            android:layout_below="@+id/description"
            android:layout_marginTop="5dp"
            android:text="salary:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/abc_primary_text_material_light"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/salary_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/salary"
            android:layout_alignLeft="@+id/divider"
            android:layout_alignStart="@+id/divider"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="100,000"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/abc_primary_text_disable_only_material_light"
            android:textSize="12sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>